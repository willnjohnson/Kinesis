{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "enables the default permissions",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "name": "python",
                    "cmd": "python",
                    "args": true,
                    "sidecar": false
                }
            ]
        },
        "shell:allow-open",
        "openurl:allow-open-url",
        "opener:allow-open-url",
        "opener:default"
    ]
}